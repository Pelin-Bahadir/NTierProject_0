@model AppUserVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="img/favicon.png">

    <title>FlatLab - Flat & Responsive Bootstrap Admin Template</title>

    <!-- Bootstrap core CSS -->
    <link href="~/OuterTools/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/OuterTools/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/OuterTools/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/OuterTools/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/OuterTools/css/owl.carousel.css" type="text/css">
    <!-- Custom styles for this template -->
    <link href="~/OuterTools/css/style.css" rel="stylesheet">
    <link href="~/OuterTools/css/style-responsive.css" rel="stylesheet" />



</head>
<body class="login-body">
    <div class="container">
        <h1>@ViewBag.Kullanici</h1>
        <h1>@TempData["HesapAktifMi"]</h1>
        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-signin" }))
        {
<br />
        <center><h2>Giriş Yapınız</h2></center>

        <div class="login-wrap">

          @Html.TextBoxFor(x => x.AppUser.UserName, new {@class="form-control",placeholder="KUllanıcı ismi girin"})

            @Html.PasswordFor(x => x.AppUser.Password, new {@class="form-control",placeholder="Sifrenizi girin"})

            <br />

            <button class="btn btn-primary">Giriş yap</button>

            <div>
                @Html.ActionLink("Kayıt ol","RegisterNow","Register")
            </div>

        </div>


        }
    </div>
</body>
</html>
