@model CartPageVM


@{
    ViewBag.Title = "CartPage";
}

<div class="jumbotron">
    Odemeniz gereken toplam tutar => @Model.Cart.TotalPrice ...Siparişi oynaylamak icin lütfen @Html.ActionLink("tıklayınız","ConfirmOrder")
</div>

<div class="row product-list">
    @foreach (CartItem item in Model.Cart.Sepetim)
    {

        <div class="col-md-4">
            <section class="panel">
                <div class="pro-img-box">

                    @if (item.ImagePath == null || item.ImagePath == "3" || item.ImagePath.Contains("nightlife"))
                    {
                        <img src="/Pictures/330426628a1b02a7f2515bc99f2758e3.jpg" alt="Resim yok" width="100" height="300" title="@item.Name" />
                    }
                    else
                    {
                        <img src="@item.ImagePath" alt="Resim yok" width="200" height="200" title="@item.Name" />
                    }





                    <a href="@Url.Action("DeleteFromCart", new {id=item.ID})" class="adtocart">
                        <i class="glyphicon glyphicon-remove"></i>
                    </a>
                </div>

                <div class="panel-body text-center">
                    <h4>
                        <a href="#" class="pro-title">
                            @item.Name x @item.Amount 
                        </a>
                    </h4>
                    <p class="price">$@item.SubTotal</p>
                </div>
            </section>
        </div>

    }
</div>
