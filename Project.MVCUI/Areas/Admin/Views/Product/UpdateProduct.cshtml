@model ProductVM
@{
    ViewBag.Title = "UpdateProduct";
}

<style>

    .genislik {
        width: 300px
    }
</style>




@using (Html.BeginForm())
{

   

    

    <div class="row">
        @Html.HiddenFor(x=>x.Product.ID)
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    Kategori Ekleme Sayfası
                </header>

                <div class="panel panel-body">
                    <div class="form-group">
                        <label class="col-sm-2"> Kategori İsim </label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Product.ProductName, new { @class = "form-control genislik" })
                        </div>
                    </div>


                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2"> Fiyat </label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Product.UnitPrice, new { @class = "form-control genislik" })
                        </div>
                    </div>


                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2"> Stok </label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Product.UnitsInStock, new { @class = "form-control genislik" })
                        </div>
                    </div>


                    <br /> <br />


                    <div class="form-group">
                        <label class="col-sm-2"> Kategori </label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(x => x.Product.CategoryID, new SelectList(Model.Categories, "ID", "CategoryName"), "Lütfen Seciniz", new { @class = "form-control genislik" })
                        </div>
                    </div>






                    <div class="form-group">
                        <label class="col-sm-2"> Islem :  </label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">Güncelle</button>
                        </div>
                    </div>







                </div>




            </section>
        </div>


    </div>

}

